<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clFragmentCountries"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".ui.detailcountries.CountriesDetailFragment">

    <ImageView
        android:id="@+id/ivFlag"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivBack"
        tools:background="@color/red" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/gold" />

    <TextView
        android:id="@+id/tvCountryTitle"
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivFlag"
        tools:text="@string/app_name" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/infoCountry"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCountryTitle">

        <TextView
            android:id="@+id/tvCapital"
            style="@style/SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            app:layout_constraintStart_toStartOf="@+id/infoCountry"
            app:layout_constraintTop_toTopOf="@+id/infoCountry"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/tvPopulation"
            style="@style/SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            app:layout_constraintStart_toStartOf="@+id/infoCountry"
            app:layout_constraintTop_toBottomOf="@+id/tvCapital"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/tvArea"
            style="@style/SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            app:layout_constraintStart_toStartOf="@+id/infoCountry"
            app:layout_constraintTop_toBottomOf="@+id/tvPopulation"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/tvBorders"
            style="@style/SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            app:layout_constraintStart_toStartOf="@+id/infoCountry"
            app:layout_constraintTop_toBottomOf="@+id/tvArea"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/tvContinents"
            style="@style/SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            app:layout_constraintStart_toStartOf="@+id/infoCountry"
            app:layout_constraintTop_toBottomOf="@+id/tvBorders"
            tools:text="@string/app_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/pbDetailCountries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/gold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCountryTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>