<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WorldExplorer" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/secondary</item>
    </style>

    <style name="Theme.WorldExplorer" parent="Base.Theme.WorldExplorer" />

    <!-- Mobile Big Screens -->
    <style name="Basic">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/oregano</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="BasicSmall" parent="Basic">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Title" parent="Basic">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="BigTitle" parent="Title">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="ExtraBigTitle" parent="Title">
        <item name="android:textSize">60sp</item>
    </style>

    <style name="SubTitle" parent="Title">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="SubTitleDark" parent="SubTitle">
        <item name="android:textColor">@color/secondaryDark</item>
    </style>

    <style name="NotBoldSubTitle" parent="SubTitle">
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Mobile Small Screens (sw320dp)-->
    <style name="Basic320dp" parent="Basic">
        <item name="android:textSize">14sp</item> <!-- Reducción del 20% desde 17sp -->
    </style>

    <style name="Title320dp" parent="Basic">
        <item name="android:textSize">24sp</item> <!-- Reducción del 20% desde 30sp -->
    </style>

    <style name="BigTitle320dp" parent="Title">
        <item name="android:textSize">32sp</item> <!-- Reducción del 20% desde 40sp -->
    </style>

    <style name="ExtraBigTitle320dp" parent="Title">
        <item name="android:textSize">48sp</item> <!-- Reducción del 20% desde 60sp -->
    </style>

    <style name="SubTitle320dp" parent="Title">
        <item name="android:textSize">20sp</item> <!-- Reducción del 20% desde 25sp -->
    </style>

</resources>